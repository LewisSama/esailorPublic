<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{% endblock %}</title>
        {# Run `composer require symfony/webpack-encore-bundle`
           and uncomment the following Encore helpers to start using Symfony UX #}
        {% block stylesheets %}
            {#{{ encore_entry_link_tags('app') }}#}
        {% endblock %}
        <link rel="stylesheet" href="css/header.css">
        <link rel="stylesheet" href="css/normalize.css">
        {% block javascripts %}
            {#{{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body>
        <header> 
            <div id="top__header">
                <img id="logoEsailor" src="images/esailor.png">

                <form action="" id="header_search">
                    <img id="header__searchIcon" src="images/searchIcon.png">
                    <input placeholder="Search..." id="header__searchBar" type="text">
                    <button class="header__farm">go</button>
                </form>
            </div>

            <nav id="header__nav">
                <ul>
                    <li class="header__nav__category">MEDIA & SOCIAL</li>
                    <li class="header__nav__category">BARS, RESTO & LOISIRS</li>  
                    <li class="header__nav__category">JUSTICE</li>
                    <li class="header__nav__category">HABITATION</li>
                    <li class="header__nav__category">SANTÉ & BEAUTÉ</li> 
                    <li class="header__nav__category">AUTOMOBILE</li>
                    <li class="header__nav__category">ENTREPRISES</li>
                </ul>
            </nav>
        </header>
        {% block body %}{% endblock %}
    </body>
</html>
